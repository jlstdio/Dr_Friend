<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/applelikeblack"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="김대륜"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:gravity="center"
                android:textColor="@color/applelikeblack"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="no profile"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="나이(만)"
                    android:textColor="@color/applelikeblack"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:gravity="center"
                    android:layout_weight="1.8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="17세"
                    android:textColor="@color/applelikeblack"
                    android:textSize="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="몸무게"
                    android:textColor="@color/applelikeblack"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:gravity="center"
                    android:layout_weight="1.8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="70kg"
                    android:textColor="@color/applelikeblack"
                    android:textSize="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="키"
                    android:textColor="@color/applelikeblack"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:gravity="center"
                    android:layout_weight="1.8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="176cm"
                    android:textColor="@color/applelikeblack"
                    android:textSize="30dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/applelikeblack"
                android:text="혈액형 및 특징"/>

            <LinearLayout
                android:layout_weight="2.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="A Rh+"
                        android:textColor="@color/applelikeblack"
                        android:textSize="30dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1.7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="잠을 안자는 편, 운동량 부족상태"
                        android:textColor="@color/applelikeblack"
                        android:textSize="20dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/applelikeblack"
                android:text="특이 질환"/>

            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="비염"
                    android:textColor="@color/applelikeblack"
                    android:textSize="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <Button
                android:onClick="warning"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/roundbluegreen"
                android:text="편집하기"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>